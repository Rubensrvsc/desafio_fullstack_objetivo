<%= render "admin_header" %>

<% if !@students_matriculates.present?%>
    <h1>Ainda não há Estudantes Matriculados</h1>
<% else %>

<div>
<h1>Lista de Estudantes Matriculados</h1>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome do Estudante
            </th>
            <th>Cpf</th>
            <th>Ver detalhes</th>
        </tr>
    </thead>
    <tbody>
        <% @students_matriculates.each do |student| %>
        <tr>
            <td><%= student.student_name  %></td>
            <td><%= student.cpf  %></td>
            <td><%= link_to "Link", "/details/#{student.id}", class: "nav-link" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="paginate">
    <%= paginate @students_matriculates %>
</div>

</div>

 <% end %>